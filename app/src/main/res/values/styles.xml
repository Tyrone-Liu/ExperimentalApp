<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material">
        <item name="android:windowFullscreen">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:navigationBarColor">@color/colorSurface</item>
        <item name="android:colorBackground">@color/colorSurface</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorSecondary</item>
    </style>

    <style name="CameraTheme" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/colorBackgroundVariant</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:colorAccent">@color/colorSecondary</item>
    </style>
    <style name="CameraTheme.TextAccentColor"><item name="android:textColor">@color/colorSecondary</item></style>
    <style name="CameraTheme.TextAccentColorDark"><item name="android:textColor">@color/colorSecondaryVariant</item></style>
    <style name="CameraTheme.ButtonColoredAccentColor" parent="@android:style/Widget.Material.Button.Colored">
        <item name="android:backgroundTint">@color/colorSecondary</item>
    </style>
    <style name="CameraTheme.SeekBarAccentColor" parent="@android:style/Widget.Material.SeekBar">
        <item name="android:progressBackgroundTint">@color/colorSecondary</item>
        <item name="android:progressTint">@color/colorSecondary</item>
        <item name="android:thumbTint">@color/colorSecondary</item>
    </style>
    <style name="CameraTheme.CheckBoxAccentColor" parent="@android:style/Widget.Material.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>
    <style name="CameraTheme.EditTextAccentColor" parent="@android:style/Widget.Material.EditText">
        <item name="android:backgroundTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textColorHint">@color/colorSecondaryVariant</item>
    </style>
    <style name="CameraTheme.ScrollbarThumbAccentColor">
        <item name="android:scrollbarThumbVertical">@color/colorSecondaryVariant</item>
    </style>

    <style name="CameraTheme.InformationLog">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CameraTheme.Indicator" parent="@android:style/Widget.Material.Button.Borderless.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>
