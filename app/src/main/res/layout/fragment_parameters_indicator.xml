<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Row #1 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_parameters_indicator_exposureTime"
        style="@style/CameraTheme.Indicator"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/fragment_parameters_indicator_exposureTime"
        app:layout_constraintBottom_toTopOf="@+id/fragment_parameters_indicator_whiteBalance"
        app:layout_constraintEnd_toStartOf="@+id/fragment_parameters_indicator_sensitivity"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_parameters_indicator_sensitivity"
        style="@style/CameraTheme.Indicator"
        android:text="@string/fragment_parameters_indicator_sensitivity"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_parameters_indicator_exposureTime"
        app:layout_constraintEnd_toStartOf="@+id/fragment_parameters_indicator_aperture"
        app:layout_constraintStart_toEndOf="@+id/fragment_parameters_indicator_exposureTime"
        app:layout_constraintTop_toTopOf="@+id/fragment_parameters_indicator_exposureTime" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_parameters_indicator_aperture"
        style="@style/CameraTheme.Indicator"
        android:text="@string/fragment_parameters_indicator_aperture"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_parameters_indicator_exposureTime"
        app:layout_constraintEnd_toStartOf="@+id/fragment_parameters_indicator_flash"
        app:layout_constraintStart_toEndOf="@+id/fragment_parameters_indicator_sensitivity"
        app:layout_constraintTop_toTopOf="@+id/fragment_parameters_indicator_exposureTime" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_parameters_indicator_flash"
        style="@style/CameraTheme.Indicator"
        android:layout_marginEnd="8dp"
        android:text="@string/fragment_parameters_indicator_flash"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_parameters_indicator_exposureTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragment_parameters_indicator_aperture"
        app:layout_constraintTop_toTopOf="@+id/fragment_parameters_indicator_exposureTime" />

    <!-- Row #2 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_parameters_indicator_whiteBalance"
        style="@style/CameraTheme.Indicator"
        android:layout_marginBottom="4dp"
        android:text="@string/fragment_parameters_indicator_whiteBalance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fragment_parameters_indicator_opticalImageStabilization"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/fragment_parameters_indicator_exposureTime"
        app:layout_constraintTop_toBottomOf="@id/fragment_parameters_indicator_exposureTime" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_parameters_indicator_opticalImageStabilization"
        style="@style/CameraTheme.Indicator"
        android:text="@string/fragment_parameters_indicator_opticalImageStabilization"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_parameters_indicator_whiteBalance"
        app:layout_constraintEnd_toStartOf="@+id/fragment_parameters_indicator_focalLength"
        app:layout_constraintStart_toEndOf="@+id/fragment_parameters_indicator_whiteBalance"
        app:layout_constraintTop_toTopOf="@+id/fragment_parameters_indicator_whiteBalance" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_parameters_indicator_focalLength"
        style="@style/CameraTheme.Indicator"
        android:text="@string/fragment_parameters_indicator_focalLength"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_parameters_indicator_whiteBalance"
        app:layout_constraintEnd_toStartOf="@+id/fragment_parameters_indicator_focusDistance"
        app:layout_constraintStart_toEndOf="@+id/fragment_parameters_indicator_opticalImageStabilization"
        app:layout_constraintTop_toTopOf="@+id/fragment_parameters_indicator_whiteBalance" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_parameters_indicator_focusDistance"
        style="@style/CameraTheme.Indicator"
        android:text="@string/fragment_parameters_indicator_focusDistance"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_parameters_indicator_whiteBalance"
        app:layout_constraintEnd_toEndOf="@id/fragment_parameters_indicator_flash"
        app:layout_constraintStart_toEndOf="@+id/fragment_parameters_indicator_focalLength"
        app:layout_constraintTop_toTopOf="@+id/fragment_parameters_indicator_whiteBalance" />

</androidx.constraintlayout.widget.ConstraintLayout>