<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_parameters_indicator_setExposureTime"
        style="@android:style/Widget.Material.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="@string/button_parameters_indicator_setExposureTime"
        android:textColor="@color/colorSecondary"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_parameters_indicator_setSensitivity"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_parameters_indicator_setSensitivity"
        style="@android:style/Widget.Material.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:fontFamily="monospace"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="@string/button_parameters_indicator_setSensitivity"
        android:textColor="@color/colorSecondary"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_parameters_indicator_setExposureTime"
        app:layout_constraintEnd_toStartOf="@+id/button_parameters_indicator_setAperture"
        app:layout_constraintStart_toEndOf="@+id/button_parameters_indicator_setExposureTime"
        app:layout_constraintTop_toTopOf="@+id/button_parameters_indicator_setExposureTime" />

    <Button
        android:id="@+id/button_parameters_indicator_setAperture"
        style="@android:style/Widget.Material.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:fontFamily="monospace"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="@string/button_parameters_indicator_setAperture"
        android:textColor="@color/colorSecondary"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_parameters_indicator_setExposureTime"
        app:layout_constraintEnd_toStartOf="@+id/button_parameters_indicator_setAutoWhiteBalance"
        app:layout_constraintStart_toEndOf="@+id/button_parameters_indicator_setSensitivity"
        app:layout_constraintTop_toTopOf="@+id/button_parameters_indicator_setExposureTime" />

    <Button
        android:id="@+id/button_parameters_indicator_setAutoWhiteBalance"
        style="@android:style/Widget.Material.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:fontFamily="monospace"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="@string/button_parameters_indicator_setAutoWhiteBalance"
        android:textColor="@color/colorSecondary"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_parameters_indicator_setExposureTime"
        app:layout_constraintEnd_toStartOf="@+id/button_parameters_indicator_setOpticalStabilization"
        app:layout_constraintStart_toEndOf="@+id/button_parameters_indicator_setAperture"
        app:layout_constraintTop_toTopOf="@+id/button_parameters_indicator_setExposureTime" />

    <Button
        android:id="@+id/button_parameters_indicator_setOpticalStabilization"
        style="@android:style/Widget.Material.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:fontFamily="monospace"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="@string/button_parameters_indicator_setOpticalStabilization"
        android:textColor="@color/colorSecondary"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_parameters_indicator_setExposureTime"
        app:layout_constraintEnd_toStartOf="@+id/button_parameters_indicator_setFocalLength"
        app:layout_constraintStart_toEndOf="@+id/button_parameters_indicator_setAutoWhiteBalance"
        app:layout_constraintTop_toTopOf="@+id/button_parameters_indicator_setExposureTime" />

    <Button
        android:id="@+id/button_parameters_indicator_setFocalLength"
        style="@android:style/Widget.Material.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:fontFamily="monospace"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="@string/button_parameters_indicator_setFocalLength"
        android:textColor="@color/colorSecondary"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_parameters_indicator_setExposureTime"
        app:layout_constraintEnd_toStartOf="@+id/button_parameters_indicator_setFocusDistance"
        app:layout_constraintStart_toEndOf="@+id/button_parameters_indicator_setOpticalStabilization"
        app:layout_constraintTop_toTopOf="@+id/button_parameters_indicator_setExposureTime" />

    <Button
        android:id="@+id/button_parameters_indicator_setFocusDistance"
        style="@android:style/Widget.Material.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="2dp"
        android:fontFamily="monospace"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="@string/button_parameters_indicator_setFocusDistance"
        android:textColor="@color/colorSecondary"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_parameters_indicator_setExposureTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_parameters_indicator_setFocalLength"
        app:layout_constraintTop_toTopOf="@+id/button_parameters_indicator_setExposureTime" />

</android.support.constraint.ConstraintLayout>